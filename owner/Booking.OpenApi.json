  "components": {
    "schemas": {
      "LocalTime": {
        "type": "object",
        "properties": {
          "hour": {
            "type": "integer",
            "format": "int32"
          },
          "minute": {
            "type": "integer",
            "format": "int32"
          },
          "second": {
            "type": "integer",
            "format": "int32"
          },
          "nano": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "OpeningHourRequest": {
        "type": "object",
        "properties": {
          "dayOfWeek": {
            "type": "string",
            "enum": [
              "MONDAY",
              "TUESDAY",
              "WEDNESDAY",
              "THURSDAY",
              "FRIDAY",
              "SATURDAY",
              "SUNDAY"
            ]
          },
          "openTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "closeTime": {
            "$ref": "#/components/schemas/LocalTime"
          }
        },
        "required": ["closeTime", "dayOfWeek", "openTime"]
      },
      "UpdateFieldRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "monthLimit": {
            "type": "integer",
            "format": "int32"
          },
          "defaultOpenTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "defaultCloseTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "status": {
            "type": "string",
            "enum": ["ENABLE", "UNABLE", "DELETED"]
          },
          "openingHours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OpeningHourRequest"
            },
            "uniqueItems": true
          }
        },
        "required": [
          "defaultCloseTime",
          "defaultOpenTime",
          "monthLimit",
          "name"
        ]
      },
      "FieldInfoResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "monthLimit": {
            "type": "integer",
            "format": "int32"
          },
          "sportTypeId": {
            "type": "integer",
            "format": "int64"
          },
          "sportTypeName": {
            "type": "string"
          },
          "venueId": {
            "type": "integer",
            "format": "int64"
          },
          "status": {
            "type": "string",
            "enum": ["ENABLE", "UNABLE", "DELETED"]
          },
          "openingHours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OpeningHourResponse"
            },
            "uniqueItems": true
          }
        }
      },
      "OpeningHourResponse": {
        "type": "object",
        "properties": {
          "dayOfWeek": {
            "type": "string",
            "enum": [
              "MONDAY",
              "TUESDAY",
              "WEDNESDAY",
              "THURSDAY",
              "FRIDAY",
              "SATURDAY",
              "SUNDAY"
            ]
          },
          "openTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "closeTime": {
            "$ref": "#/components/schemas/LocalTime"
          }
        }
      },
      "RestResponseFieldInfoResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "data": {
            "$ref": "#/components/schemas/FieldInfoResponse"
          }
        }
      },
      "DailyPricing": {
        "type": "object",
        "properties": {
          "dayOfWeek": {
            "type": "string",
            "enum": [
              "MONDAY",
              "TUESDAY",
              "WEDNESDAY",
              "THURSDAY",
              "FRIDAY",
              "SATURDAY",
              "SUNDAY"
            ]
          },
          "prices": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Price"
            },
            "uniqueItems": true
          }
        },
        "required": ["dayOfWeek", "prices"]
      },
      "Price": {
        "type": "object",
        "properties": {
          "startTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "endTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "price": {
            "type": "number",
            "minimum": 0.0
          }
        },
        "required": ["endTime", "price", "startTime"]
      },
      "UpdateCourtRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "defaultPrice": {
            "type": "number",
            "minimum": 0.0
          },
          "status": {
            "type": "string",
            "enum": ["ENABLE", "UNABLE"]
          },
          "dailyPricing": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DailyPricing"
            },
            "uniqueItems": true
          }
        },
        "required": ["dailyPricing", "defaultPrice", "name"]
      },
      "CourtResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["ENABLE", "UNABLE"]
          },
          "defaultPrice": {
            "type": "number"
          },
          "fieldId": {
            "type": "integer",
            "format": "int64"
          },
          "dailyPricing": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DailyPricing"
            },
            "uniqueItems": true
          }
        }
      },
      "RestResponseCourtResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "data": {
            "$ref": "#/components/schemas/CourtResponse"
          }
        }
      },
      "CreateFieldRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "monthLimit": {
            "type": "integer",
            "format": "int32",
            "minimum": 1
          },
          "minBookingMinutes": {
            "type": "integer",
            "format": "int32",
            "minimum": 1
          },
          "sportTypeId": {
            "type": "integer",
            "format": "int64"
          },
          "venueId": {
            "type": "integer",
            "format": "int64"
          },
          "defaultOpenTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "defaultCloseTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "openingHours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OpeningHourRequest"
            },
            "uniqueItems": true
          }
        },
        "required": [
          "defaultCloseTime",
          "defaultOpenTime",
          "minBookingMinutes",
          "monthLimit",
          "name",
          "sportTypeId",
          "venueId"
        ]
      },
      "CreateCourtRequest": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "fieldId": {
            "type": "integer",
            "format": "int64"
          },
          "defaultPrice": {
            "type": "number",
            "minimum": 0.0
          },
          "dailyPricing": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/DailyPricing"
            },
            "uniqueItems": true
          }
        },
        "required": ["dailyPricing", "defaultPrice", "fieldId", "name"]
      },
      "MergeCourtSlotRequest": {
        "type": "object",
        "properties": {
          "startTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "endTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "courtId": {
            "type": "integer",
            "format": "int64"
          }
        },
        "required": ["courtId", "date", "endTime", "startTime"]
      },
      "RestResponseVoid": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "data": {
            "type": "object"
          }
        }
      },
      "Court": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "timeSlot": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/TimeSlot"
            }
          }
        },
        "required": ["id"]
      },
      "LockCourtSlotRequest": {
        "type": "object",
        "properties": {
          "date": {
            "type": "string",
            "format": "date"
          },
          "fieldId": {
            "type": "integer",
            "format": "int64"
          },
          "court": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Court"
            }
          }
        },
        "required": ["date", "fieldId"]
      },
      "TimeSlot": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "startTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "endTime": {
            "$ref": "#/components/schemas/LocalTime"
          }
        },
        "required": ["endTime", "id"]
      },
      "FieldResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "monthLimit": {
            "type": "integer",
            "format": "int32"
          },
          "status": {
            "type": "string",
            "enum": ["ENABLE", "UNABLE", "DELETED"]
          },
          "openTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "closeTime": {
            "$ref": "#/components/schemas/LocalTime"
          },
          "minBookingMinutes": {
            "type": "integer",
            "format": "int32"
          },
          "courts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Court"
            }
          }
        }
      },
      "RestResponseFieldResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "data": {
            "$ref": "#/components/schemas/FieldResponse"
          }
        }
      },
      "FieldOwnerResponse": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int64"
          },
          "name": {
            "type": "string"
          },
          "monthLimit": {
            "type": "integer",
            "format": "int32"
          },
          "sportTypeId": {
            "type": "integer",
            "format": "int64"
          },
          "minBookingMinutes": {
            "type": "integer",
            "format": "int32"
          },
          "sportTypeName": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["ENABLE", "UNABLE", "DELETED"]
          },
          "openingHours": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/OpeningHourResponse"
            },
            "uniqueItems": true
          },
          "courts": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/CourtResponse"
            },
            "uniqueItems": true
          }
        }
      },
      "RestResponseListFieldOwnerResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "format": "int32"
          },
          "data": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/FieldOwnerResponse"
            }
          }
        }
      }
    },
    "securitySchemes": {
      "Bearer Authentication": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
